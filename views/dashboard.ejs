      <button type="button" class="btn btn-sm" id="meteoSaveBtn">Salva</button>
    </div>
  </div>
</div>

<!-- ========== 10. AZIONI RAPIDE ========== -->
<div class="dashboard-actions p-quick-actions" style="margin-top:var(--space-md)">
  <a href="<%= bp %>/ferie" class="p-quick-action">
