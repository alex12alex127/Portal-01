<% var bp = typeof basePath !== 'undefined' ? basePath : ''; %>
<h1 class="page-title">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
  Impostazioni
</h1>

<div class="rsp-grid-cards" style="display:grid;grid-template-columns:repeat(auto-fit,minmax(340px,1fr));gap:1.25rem">

  <div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden">
    <div style="padding:1rem 1.25rem;border-bottom:1px solid var(--border,#e5e7eb);font-weight:600;display:flex;align-items:center;gap:.5rem">
      <svg style="width:18px;height:18px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 11-3 0m3 0a1.5 1.5 0 10-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-9.75 0h9.75" /></svg>
      Preferenze
    </div>
    <form id="settingsForm" style="padding:1.25rem">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div style="margin-bottom:1.25rem">
        <label style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Lingua</label>
        <select name="lingua" style="width:100%">
          <option value="it"<%= settings.lingua === 'it' ? ' selected' : '' %>>Italiano</option>
          <option value="en"<%= settings.lingua === 'en' ? ' selected' : '' %>>English</option>
        </select>
      </div>
      <div style="margin-bottom:1.25rem">
        <label style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Tema</label>
        <select name="tema" style="width:100%">
          <option value="auto"<%= settings.tema === 'auto' ? ' selected' : '' %>>Automatico (segue sistema)</option>
          <option value="light"<%= settings.tema === 'light' ? ' selected' : '' %>>Chiaro</option>
          <option value="dark"<%= settings.tema === 'dark' ? ' selected' : '' %>>Scuro</option>
        </select>
      </div>
      <div style="margin-bottom:1.25rem;padding:1rem;border:1px solid var(--border,#e5e7eb);border-radius:8px">
        <label style="display:flex;align-items:center;gap:.5rem;cursor:pointer">
          <input type="checkbox" name="notifiche_email" value="on"<%= settings.notifiche_email ? ' checked' : '' %>>
          <span style="font-weight:600;font-size:.9rem">Ricevi notifiche via email</span>
        </label>
        <p style="font-size:.8rem;color:var(--muted);margin:.35rem 0 0 1.5rem">Ricevi email quando le tue richieste ferie vengono approvate o rifiutate.</p>
      </div>
      <div style="display:flex;align-items:center;gap:1rem">
        <button type="submit" class="btn">Salva impostazioni</button>
        <span id="settingsMsg" style="font-size:.85rem"></span>
      </div>
    </form>
  </div>

  <div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden">
    <div style="padding:1rem 1.25rem;border-bottom:1px solid var(--border,#e5e7eb);font-weight:600;display:flex;align-items:center;gap:.5rem">
      <svg style="width:18px;height:18px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /></svg>
      Account
    </div>
    <div style="padding:1.25rem">
      <div style="display:flex;flex-direction:column;gap:.75rem;margin-bottom:1.25rem">
        <div style="display:flex;justify-content:space-between;align-items:center;padding:.6rem 0;border-bottom:1px solid var(--border,#f3f4f6)">
          <span style="font-size:.8rem;font-weight:600;color:var(--muted);text-transform:uppercase;letter-spacing:.03em">Username</span>
          <span style="font-size:.9rem;font-weight:500"><%= user.username %></span>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center;padding:.6rem 0;border-bottom:1px solid var(--border,#f3f4f6)">
          <span style="font-size:.8rem;font-weight:600;color:var(--muted);text-transform:uppercase;letter-spacing:.03em">Email</span>
          <span style="font-size:.9rem"><%= user.email %></span>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center;padding:.6rem 0">
          <span style="font-size:.8rem;font-weight:600;color:var(--muted);text-transform:uppercase;letter-spacing:.03em">Ruolo</span>
          <span class="badge approved" style="font-size:.75rem;text-transform:capitalize"><%= user.role %></span>
        </div>
      </div>
      <div style="display:flex;gap:.5rem;flex-wrap:wrap">
        <a href="<%= bp %>/profile" class="btn btn-sm" style="display:inline-flex;align-items:center;gap:.3rem">
          <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125" /></svg>
          Modifica profilo
        </a>
        <a href="<%= bp %>/profile/export" class="btn btn-sm btn--secondary" style="display:inline-flex;align-items:center;gap:.3rem">
          <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" /></svg>
          Esporta dati
        </a>
      </div>
    </div>
  </div>

</div>

<script>
(function(){
  var form = document.getElementById('settingsForm');
  var msg = document.getElementById('settingsMsg');
  if (!form) return;
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    var fd = new FormData(form);
    var data = {};
    fd.forEach(function(v,k){ data[k] = v; });
    fetch('<%= typeof basePath !== "undefined" ? basePath : "" %>/profile/settings', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': data._csrf },
      body: JSON.stringify(data)
    }).then(function(r){ return r.json(); }).then(function(r){
      if (r.success) {
        msg.textContent = 'Salvato!';
        msg.style.color = 'var(--success, green)';
        // Applica tema
        var tema = data.tema;
        if (tema === 'auto') {
          var dark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
          if (dark) document.documentElement.setAttribute('data-theme', 'dark');
          else document.documentElement.removeAttribute('data-theme');
          localStorage.setItem('portal-theme', 'auto');
        } else if (tema === 'dark') {
          document.documentElement.setAttribute('data-theme', 'dark');
          localStorage.setItem('portal-theme', 'dark');
        } else {
          document.documentElement.removeAttribute('data-theme');
          localStorage.setItem('portal-theme', 'light');
        }
      } else {
        msg.textContent = r.error || 'Errore';
        msg.style.color = 'var(--danger, red)';
      }
      setTimeout(function(){ msg.textContent = ''; }, 3000);
    }).catch(function(){ msg.textContent = 'Errore di rete'; msg.style.color = 'var(--danger, red)'; });
  });
})();
</script>
