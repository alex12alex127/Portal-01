# Database (obbligatorio)
DATABASE_URL=postgresql://postgres:password@localhost:5432/portal_db

# Server
PORT=3000
NODE_ENV=development
# Base path se l'app è dietro un proxy (es. https://dominio.it/portal/ → BASE_PATH=/portal)
# BASE_PATH=/portal

# Sessioni (obbligatorio in produzione)
SESSION_SECRET=cambia-con-una-stringa-casuale-lunga
JWT_SECRET=altra-stringa-casuale-diversa

# Email (recupero password, opzionale: senza SMTP il link viene loggato in console)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=noreply@example.com
