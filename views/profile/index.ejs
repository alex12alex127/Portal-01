<h1 class="page-title">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /></svg>
  Profilo
</h1>
<div class="card">
  <h2><svg class="icon icon--sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /></svg> Dati account</h2>
  <form id="pf">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <label for="pf-username">Username</label>
    <input id="pf-username" type="text" value="<%= profile.username %>" disabled>
    <label for="pf-full_name">Nome</label>
    <input id="pf-full_name" type="text" name="full_name" value="<%= profile.full_name %>" required>
    <label for="pf-email">Email</label>
    <input id="pf-email" type="email" name="email" value="<%= profile.email %>" required>
    <button type="submit" class="btn"><span class="btn-text">Aggiorna</span></button>
  </form>
  <div id="pfMsg" role="status" aria-live="polite"></div>
</div>
<div class="card">
  <h2><svg class="icon icon--sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.852-.051-1.704-.223-2.654-.523a3 3 0 11-3.75-3.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg> Cambia password</h2>
  <form id="pw">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <label for="pw-current">Password attuale</label>
    <input id="pw-current" type="password" name="current_password" required>
    <label for="pw-new">Nuova password</label>
    <input id="pw-new" type="password" name="new_password" required>
    <label for="pw-confirm">Conferma</label>
    <input id="pw-confirm" type="password" name="confirm_password" required>
    <button type="submit" class="btn"><span class="btn-text">Cambia password</span></button>
  </form>
  <div id="pwMsg" role="status" aria-live="polite"></div>
</div>
<script>
  document.getElementById('pf').onsubmit=async function(e){ e.preventDefault(); var m=document.getElementById('pfMsg'); m.textContent=''; m.className=''; var btn=this.querySelector('button'), txt=btn.querySelector('.btn-text'); btn.disabled=true; if(txt) txt.textContent='Salvataggio...'; try{ var r=await fetch('/profile/update',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(Object.fromEntries(new FormData(this)))}); var j=await r.json(); m.textContent=j.success?j.message:j.error; m.className=j.success?'message-ok':'message-error'; }catch(x){ m.textContent='Errore'; m.className='message-error'; } btn.disabled=false; if(txt) txt.textContent='Aggiorna'; };
  document.getElementById('pw').onsubmit=async function(e){ e.preventDefault(); var m=document.getElementById('pwMsg'); m.textContent=''; m.className=''; var btn=this.querySelector('button'), txt=btn.querySelector('.btn-text'); btn.disabled=true; if(txt) txt.textContent='Salvataggio...'; try{ var r=await fetch('/profile/change-password',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(Object.fromEntries(new FormData(this)))}); var j=await r.json(); m.textContent=j.success?j.message:j.error; m.className=j.success?'message-ok':'message-error'; if(j.success) this.reset(); }catch(x){ m.textContent='Errore'; m.className='message-error'; } btn.disabled=false; if(txt) txt.textContent='Cambia password'; };
</script>
