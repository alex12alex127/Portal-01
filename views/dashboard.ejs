<% var bp = typeof basePath !== 'undefined' ? basePath : ''; %>
<h1 class="page-title animate-in">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>
  Benvenuto, <%= typeof user !== 'undefined' && user ? user.full_name || user.username : '' %>
</h1>

<!-- ========== 1. FERIE: BUDGET + STATISTICHE ========== -->
<% if (typeof summary !== 'undefined' && summary) { %>
<div class="dashboard-stats p-stats">
  <% if (typeof saldoFerie !== 'undefined' && saldoFerie) { %>
  <div class="p-stat p-stat--<%= saldoFerie.giorni_residui < 0 ? 'danger' : saldoFerie.giorni_residui < 5 ? 'warn' : 'success' %>">
    <div class="p-stat__value"><%= saldoFerie.budget_configurato ? Math.round(saldoFerie.giorni_residui * 10) / 10 : (summary.giorniApproved ? (26 - summary.giorniApproved) : 26) %></div>
    <div class="p-stat__label">Ferie da utilizzare</div>
  </div>
  <% } %>
  <div class="p-stat p-stat--primary">
    <div class="p-stat__value"><%= summary.giorniApproved || 0 %></div>
    <div class="p-stat__label">Giorni usati <%= summary.year %></div>
  </div>
  <div class="p-stat p-stat--warn">
    <div class="p-stat__value"><%= summary.pending || 0 %></div>
    <div class="p-stat__label">In attesa</div>
  </div>
  <div class="p-stat p-stat--success">
    <div class="p-stat__value"><%= summary.approved || 0 %></div>
    <div class="p-stat__label">Approvate</div>
  </div>
</div>
<% } %>

<div class="p-dashboard-grid">

<!-- ========== 2. NOTIFICHE APPROVAZIONI ========== -->
<% if (typeof notificheApprovazioni !== 'undefined' && notificheApprovazioni.length > 0) { %>
<div class="dashboard-approvazioni p-card">
  <div class="p-card-header">
    <h2 class="p-card-header__title">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      Approvazioni Ferie
      <% var nonLette = notificheApprovazioni.filter(function(n){return !n.letta}).length; if (nonLette > 0) { %><span class="p-tag-count"><%= nonLette %></span><% } %>
    </h2>
    <a href="<%= bp %>/notifiche" class="p-card-header__action">Tutte →</a>
  </div>
  <div class="p-card-body--flush">
    <% notificheApprovazioni.forEach(function(n) { %>
    <div class="p-notifica<%= !n.letta ? ' p-notifica--unread' : ' p-notifica--read' %>">
      <div style="display:flex;align-items:center;gap:.4rem">
        <% if (n.tipo === 'ferie_approved') { %><span class="p-tag p-tag--success" style="font-size:.7rem">APPROVATA</span>
        <% } else if (n.tipo === 'ferie_rejected') { %><span class="p-tag p-tag--danger" style="font-size:.7rem">RIFIUTATA</span>
        <% } else if (n.tipo === 'ferie_approve') { %><span class="p-tag p-tag--warn" style="font-size:.7rem">DA APPROVARE</span>
        <% } else { %><span class="p-tag p-tag--primary" style="font-size:.7rem">INVIATA</span><% } %>
        <span class="p-notifica__title"><%= n.titolo || 'Notifica' %></span>
      </div>
      <% if (n.messaggio) { %><div class="p-notifica__text"><%= n.messaggio %></div><% } %>
      <div class="p-notifica__date"><%= n.created_at %></div>
    </div>
    <% }); %>
  </div>
</div>
<% } %>

<!-- ========== 3. AVVISI STAFF (info, urgent, warning, success) ========== -->
<% if (typeof avvisiDashboard !== 'undefined' && avvisiDashboard.length > 0) { %>
<div class="dashboard-avvisi p-card">
  <div class="p-card-header">
    <h2 class="p-card-header__title">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" /></svg>
      Avvisi
    </h2>
    <a href="<%= bp %>/avvisi" class="p-card-header__action">Vedi tutti →</a>
  </div>
  <div class="p-card-body--flush">
    <% avvisiDashboard.forEach(function(a) { %>
    <a href="<%= bp %>/avvisi/<%= a.id %>" class="p-avviso-link<%= a.in_evidenza ? ' p-avviso-link--evidenza' : '' %>">
      <span class="badge badge--avviso badge--<%= a.tipo %>"><%= a.tipo === 'info' ? 'Info' : a.tipo === 'warning' ? 'Attenzione' : a.tipo === 'urgent' ? 'URGENTE' : a.tipo === 'success' ? 'Successo' : a.tipo %></span>
      <span class="p-avviso-link__title"><%= a.titolo %></span>
      <span class="p-avviso-link__date"><%= a.created_at %></span>
    </a>
    <% }); %>
  </div>
</div>
<% } %>

<!-- ========== 4. SCADENZE SICUREZZA (DPI + CORSI) ========== -->
<% if (typeof sicurezzaScadenze !== 'undefined' && sicurezzaScadenze.totale > 0) { %>
<div class="dashboard-sicurezza p-card">
  <div class="p-card-header">
    <h2 class="p-card-header__title">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" /></svg>
      Scadenze Sicurezza
      <span class="p-tag-count"><%= sicurezzaScadenze.totale %></span>
    </h2>
    <a href="<%= bp %>/sicurezza" class="p-card-header__action">Dettagli →</a>
  </div>
  <div class="p-card-body--flush">
    <% sicurezzaScadenze.formazioni.forEach(function(s) { %>
    <div class="p-list-item" style="padding:.6rem var(--space-md)">
      <span class="p-tag <%= s.scaduto ? 'p-tag--danger' : 'p-tag--warn' %>" style="font-size:.7rem;min-width:80px;text-align:center">CORSO</span>
      <div class="p-list-item__body" style="min-width:0">
        <div class="p-list-item__name" style="font-size:.85rem"><%= s.tipo %></div>
        <div class="p-list-item__meta"><%= s.scaduto ? 'SCADUTO' : 'Scade' %>: <strong><%= s.data_scadenza %></strong></div>
      </div>
    </div>
    <% }); %>
    <% sicurezzaScadenze.dpi.forEach(function(s) { %>
    <div class="p-list-item" style="padding:.6rem var(--space-md)">
      <span class="p-tag <%= s.scaduto ? 'p-tag--danger' : 'p-tag--primary' %>" style="font-size:.7rem;min-width:80px;text-align:center">DPI</span>
      <div class="p-list-item__body" style="min-width:0">
        <div class="p-list-item__name" style="font-size:.85rem"><%= s.tipo %></div>
        <div class="p-list-item__meta"><%= s.scaduto ? 'SCADUTO' : 'Scade' %>: <strong><%= s.data_scadenza %></strong></div>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% } %>


<!-- ========== 6. FERIE DA APPROVARE (admin/manager) ========== -->
<% if (typeof ferieDaApprovare !== 'undefined' && ferieDaApprovare.length > 0) { %>
<div class="dashboard-approvare p-card">
  <div class="p-card-header">
    <h2 class="p-card-header__title">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      Ferie da approvare
      <span class="p-tag-count"><%= ferieDaApprovare.length %></span>
    </h2>
    <a href="<%= bp %>/admin/ferie" class="p-card-header__action">Gestisci →</a>
  </div>
  <div class="p-card-body--flush">
    <% ferieDaApprovare.forEach(function(f) { %>
    <div class="p-list-item" style="padding:.6rem var(--space-md)">
      <div class="p-list-item__avatar p-list-item__avatar--warn"><%= f.full_name ? f.full_name.charAt(0).toUpperCase() : '?' %></div>
      <div class="p-list-item__body" style="min-width:0">
        <div class="p-list-item__name" style="font-size:.85rem"><%= f.full_name || f.username %></div>
        <div class="p-list-item__meta"><%= f.tipo %> · <%= f.data_inizio %> → <%= f.data_fine %> · <strong><%= f.giorni_totali %>g</strong></div>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% } %>

</div>

<!-- ========== 7. CALENDARIO FERIE MESE ========== -->
<% if (typeof calendarioFerie !== 'undefined') { %>
<%
  // Build ferie lookup: dateStr -> array of names
  var _calFerie = {};
  (calendarioFerie || []).forEach(function(f) {
    var nome = f.full_name || f.username;
    var start = new Date(f.data_inizio + 'T00:00:00');
    var end = new Date(f.data_fine + 'T00:00:00');
    for (var dt = new Date(start); dt <= end; dt.setDate(dt.getDate() + 1)) {
      // Only include days in current month
      if (dt.getMonth() + 1 === annoMese.mese && dt.getFullYear() === annoMese.anno) {
        var key = dt.getDate();
        if (!_calFerie[key]) _calFerie[key] = [];
        if (_calFerie[key].indexOf(nome) === -1) _calFerie[key].push(nome);
      }
    }
  });
  // Unique people for legend
  var _calPersone = {};
  var _calColors = ['#3b82f6','#8b5cf6','#06b6d4','#10b981','#f59e0b','#ef4444','#ec4899','#6366f1','#14b8a6','#f97316'];
  (calendarioFerie || []).forEach(function(f) {
    var nome = f.full_name || f.username;
    if (!_calPersone[nome]) _calPersone[nome] = _calColors[Object.keys(_calPersone).length % _calColors.length];
  });
  // primoGiornoMese: 0=Sun, adjust to Mon-start: (day + 6) % 7
  var _firstDayOffset = (primoGiornoMese + 6) % 7; // 0=Mon
  var _today = new Date();
  var _isCurrentMonth = _today.getMonth() + 1 === annoMese.mese && _today.getFullYear() === annoMese.anno;
  var _todayDate = _today.getDate();
  var _giorniNomi = ['Lun','Mar','Mer','Gio','Ven','Sab','Dom'];
%>
<div class="dashboard-calendario" style="margin-top:var(--space-md)">
  <div class="dcal">
    <!-- Header -->
    <div class="dcal__header">
      <div class="dcal__header-left">
        <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
        <h2 class="dcal__title"><span style="text-transform:capitalize"><%= meseCorrente %></span></h2>
      </div>
      <a href="<%= bp %>/ferie" class="p-card-header__action">Le mie ferie →</a>
    </div>

    <!-- Day names -->
    <div class="dcal__weekdays">
      <% _giorniNomi.forEach(function(g, i) { %>
        <div class="dcal__weekday <%= i >= 5 ? 'dcal__weekday--we' : '' %>"><%= g %></div>
      <% }); %>
    </div>

    <!-- Calendar grid -->
    <div class="dcal__grid">
      <% /* Empty cells before first day */ %>
      <% for (var e = 0; e < _firstDayOffset; e++) { %>
        <div class="dcal__cell dcal__cell--empty"></div>
      <% } %>

      <% for (var d = 1; d <= giorniMese; d++) {
        var _dayOfWeek = (d - 1 + _firstDayOffset) % 7; // 0=Mon
        var _isWe = _dayOfWeek >= 5;
        var _isToday = _isCurrentMonth && d === _todayDate;
        var _ferieList = _calFerie[d] || [];
        var _hasFerie = _ferieList.length > 0;
      %>
        <div class="dcal__cell <%= _isWe ? 'dcal__cell--weekend' : '' %> <%= _isToday ? 'dcal__cell--today' : '' %> <%= _hasFerie ? 'dcal__cell--ferie' : '' %>">
          <div class="dcal__day"><%= d %></div>
          <% if (_hasFerie) { %>
            <div class="dcal__ferie-dots">
              <% _ferieList.slice(0, 3).forEach(function(nome) { %>
                <span class="dcal__dot" style="background:<%= _calPersone[nome] || '#3b82f6' %>" title="<%= nome %>"></span>
              <% }); %>
              <% if (_ferieList.length > 3) { %>
                <span class="dcal__dot-more" title="<%= _ferieList.slice(3).join(', ') %>">+<%= _ferieList.length - 3 %></span>
              <% } %>
            </div>
            <div class="dcal__ferie-names">
              <% _ferieList.slice(0, 2).forEach(function(nome) { %>
                <span class="dcal__name" style="border-left-color:<%= _calPersone[nome] || '#3b82f6' %>"><%= nome.split(' ')[0] %></span>
              <% }); %>
              <% if (_ferieList.length > 2) { %>
                <span class="dcal__name dcal__name--more">+<%= _ferieList.length - 2 %></span>
              <% } %>
            </div>
          <% } %>
        </div>
      <% } %>

      <% /* Empty cells after last day */ %>
      <% var _lastDayOfWeek = (giorniMese - 1 + _firstDayOffset) % 7; %>
      <% for (var e2 = _lastDayOfWeek + 1; e2 < 7; e2++) { %>
        <div class="dcal__cell dcal__cell--empty"></div>
      <% } %>
    </div>

    <!-- Legend -->
    <% if (Object.keys(_calPersone).length > 0) { %>
    <div class="dcal__legend">
      <% Object.keys(_calPersone).forEach(function(nome) { %>
        <div class="dcal__legend-item">
          <span class="dcal__legend-dot" style="background:<%= _calPersone[nome] %>"></span>
          <span class="dcal__legend-name"><%= nome %></span>
        </div>
      <% }); %>
    </div>
    <% } else { %>
    <div class="dcal__empty">
      <svg class="icon" style="width:32px;height:32px;opacity:.3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
      <p>Nessuno in ferie questo mese</p>
    </div>
    <% } %>
  </div>
</div>
<% } %>

<!-- ========== 8. ULTIME RICHIESTE ========== -->
<% if (typeof ultimeRichieste !== 'undefined' && ultimeRichieste.length > 0) { %>
<div class="dashboard-ultime p-card" style="margin-top:var(--space-md)">
  <div class="p-card-header">
    <h2 class="p-card-header__title">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
      Le mie richieste
    </h2>
    <a href="<%= bp %>/ferie" class="p-card-header__action">Vedi tutte →</a>
  </div>
  <div class="p-card-body--flush">
    <% ultimeRichieste.forEach(function(r) { %>
    <div class="p-ferie-item">
      <div class="p-ferie-item__dates">
        <strong><%= r.data_inizio %></strong>
        <span class="p-ferie-item__tipo">→</span>
        <strong><%= r.data_fine %></strong>
      </div>
      <span class="p-ferie-item__tipo"><%= r.tipo %></span>
      <span class="badge badge--ferie <%= r.stato %>"><%= r.stato === 'pending' ? 'In attesa' : r.stato === 'approved' ? 'Approvato' : 'Rifiutato' %></span>
    </div>
    <% }); %>
  </div>
</div>
<% } %>

<!-- ========== 9. WIDGET METEO ========== -->
<div class="dashboard-meteo p-card" style="margin-top:var(--space-md)">
  <div class="p-card-header">
    <h2 class="p-card-header__title">
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" /></svg>
