<h1 class="page-title">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" /></svg>
  Panoramica
</h1>

<% if (typeof summary !== 'undefined' && summary) { %>
<div class="dashboard-stats">
  <div class="dashboard-stats__item">
    <span class="dashboard-stats__value"><%= summary.pending || 0 %></span>
    <span class="dashboard-stats__label">In attesa</span>
  </div>
  <div class="dashboard-stats__item">
    <span class="dashboard-stats__value"><%= summary.approved || 0 %></span>
    <span class="dashboard-stats__label">Approvate</span>
  </div>
  <div class="dashboard-stats__item">
    <span class="dashboard-stats__value"><%= summary.giorniApproved || 0 %></span>
    <span class="dashboard-stats__label">Giorni approvati <%= summary.year %></span>
  </div>
</div>
<% } %>

<% if (typeof avvisiDashboard !== 'undefined' && avvisiDashboard.length > 0) { %>
<div class="card dashboard-avvisi">
  <h2>
    <svg class="icon icon--sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" /></svg>
    Ultimi avvisi
    <% if (typeof avvisiNonLetti !== 'undefined' && avvisiNonLetti > 0) { %>
      <span class="badge badge--alert" style="margin-left:0.5rem;"><%= avvisiNonLetti %></span>
    <% } %>
  </h2>
  <ul class="dashboard-avvisi__list">
    <% avvisiDashboard.forEach(function(a) { %>
    <li class="dashboard-avvisi__item <%= a.in_evidenza ? 'dashboard-avvisi__item--evidenza' : '' %>">
      <span class="badge badge--avviso badge--<%= a.tipo %>"><%= a.tipo === 'info' ? 'Info' : a.tipo === 'warning' ? 'Attenzione' : a.tipo === 'urgent' ? 'Urgente' : 'Manutenzione' %></span>
      <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/avvisi"><%= a.titolo %></a>
      <span class="dashboard-avvisi__date"><%= a.created_at %></span>
    </li>
    <% }); %>
  </ul>
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/avvisi" class="btn btn-sm">Vai a tutti gli avvisi</a>
</div>
<% } %>

<% if (typeof notifiche !== 'undefined' && notifiche.length > 0) { %>
<div class="card dashboard-notifiche">
  <h2><i class="fa fa-envelope"></i> Notifiche</h2>
  <ul class="dashboard-notifiche__list">
    <% notifiche.forEach(function(n) { %>
    <li class="dashboard-notifiche__item <%= n.letta ? 'letta' : '' %>">
      <strong><%= n.titolo || 'Notifica' %></strong>
      <% if (n.messaggio) { %><p><%= n.messaggio %></p><% } %>
      <span class="dashboard-notifiche__date"><%= n.created_at %></span>
    </li>
    <% }); %>
  </ul>
  <form method="post" action="<%= typeof basePath !== 'undefined' ? basePath : '' %>/profile/notifiche-read" style="margin-top:0.5rem">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit" class="btn btn-sm btn--secondary">Segna tutte come lette</button>
  </form>
</div>
<% } %>

<% if (typeof ultimeRichieste !== 'undefined' && ultimeRichieste.length > 0) { %>
<div class="card dashboard-ultime">
  <h2><i class="fa fa-calendar"></i> Ultime richieste ferie</h2>
  <ul class="dashboard-ultime__list">
    <% ultimeRichieste.forEach(function(r) { %>
    <li><%= r.data_inizio %> → <%= r.data_fine %> · <%= r.tipo %> · <span class="badge badge--ferie <%= r.stato %>"><%= r.stato === 'pending' ? 'In attesa' : r.stato === 'approved' ? 'Approvato' : 'Rifiutato' %></span></li>
    <% }); %>
  </ul>
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/ferie" class="btn btn-sm">Vai a Ferie</a>
</div>
<% } %>

<nav class="dashboard-actions" aria-label="Azioni rapide">
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/ferie" class="dashboard-actions__link">Ferie</a>
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/avvisi" class="dashboard-actions__link">Avvisi</a>
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/ferie/calendar/ical" class="dashboard-actions__link">Esporta Calendario iCal</a>
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/profile/settings" class="dashboard-actions__link">Impostazioni</a>
</nav>

<div style="margin-top:1rem;text-align:right">
  <button type="button" class="btn btn-sm btn--secondary" id="toggleWidgets" title="Personalizza widget">
    <svg class="icon icon--sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
    Personalizza
  </button>
</div>
<div id="widgetSettings" style="display:none;margin-top:.5rem;padding:.75rem;background:var(--card-bg,#fff);border:1px solid var(--border,#ddd);border-radius:8px">
  <p style="margin:0 0 .5rem;font-weight:600;font-size:.9rem">Mostra/nascondi sezioni:</p>
  <label style="display:flex;align-items:center;gap:.4rem;margin-bottom:.3rem;cursor:pointer;font-size:.85rem"><input type="checkbox" data-widget="stats" checked> Statistiche ferie</label>
  <label style="display:flex;align-items:center;gap:.4rem;margin-bottom:.3rem;cursor:pointer;font-size:.85rem"><input type="checkbox" data-widget="avvisi" checked> Ultimi avvisi</label>
  <label style="display:flex;align-items:center;gap:.4rem;margin-bottom:.3rem;cursor:pointer;font-size:.85rem"><input type="checkbox" data-widget="notifiche" checked> Notifiche</label>
  <label style="display:flex;align-items:center;gap:.4rem;margin-bottom:.3rem;cursor:pointer;font-size:.85rem"><input type="checkbox" data-widget="richieste" checked> Ultime richieste</label>
  <label style="display:flex;align-items:center;gap:.4rem;cursor:pointer;font-size:.85rem"><input type="checkbox" data-widget="azioni" checked> Azioni rapide</label>
</div>

<script>
(function(){
  var btn = document.getElementById('toggleWidgets');
  var panel = document.getElementById('widgetSettings');
  if (!btn || !panel) return;

  var map = {
    stats: '.dashboard-stats',
    avvisi: '.dashboard-avvisi',
    notifiche: '.dashboard-notifiche',
    richieste: '.dashboard-ultime',
    azioni: '.dashboard-actions'
  };

  // Carica preferenze salvate
  var saved = {};
  try { saved = JSON.parse(localStorage.getItem('portal-widgets') || '{}'); } catch(e){}
  Object.keys(map).forEach(function(k) {
    var el = document.querySelector(map[k]);
    var cb = panel.querySelector('[data-widget="' + k + '"]');
    if (saved[k] === false) {
      if (el) el.style.display = 'none';
      if (cb) cb.checked = false;
    }
  });

  btn.addEventListener('click', function() {
    panel.style.display = panel.style.display === 'none' ? 'block' : 'none';
  });

  panel.addEventListener('change', function(e) {
    var cb = e.target;
    if (!cb.dataset.widget) return;
    var el = document.querySelector(map[cb.dataset.widget]);
    if (el) el.style.display = cb.checked ? '' : 'none';
    // Salva preferenze
    var prefs = {};
    panel.querySelectorAll('[data-widget]').forEach(function(c) {
      prefs[c.dataset.widget] = c.checked;
    });
    localStorage.setItem('portal-widgets', JSON.stringify(prefs));
  });
})();
</script>
