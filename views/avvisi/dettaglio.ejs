<h1 class="page-title">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" /></svg>
  <%= avviso.titolo %>
</h1>

<div class="card">
  <div style="display:flex;align-items:center;gap:.5rem;flex-wrap:wrap;margin-bottom:1rem">
    <span class="badge badge--avviso badge--<%= avviso.tipo %>"><%= avviso.tipo === 'info' ? 'Info' : avviso.tipo === 'warning' ? 'Attenzione' : avviso.tipo === 'urgent' ? 'Urgente' : avviso.tipo === 'success' ? 'Successo' : avviso.tipo %></span>
    <% if (avviso.in_evidenza) { %><span class="badge" style="background:var(--primary);color:#fff;padding:.15rem .5rem;border-radius:999px;font-size:.75rem">In evidenza</span><% } %>
    <span class="text-muted" style="font-size:.85rem"><%= avviso.created_at ? new Date(avviso.created_at).toLocaleDateString('it-IT', { day:'numeric', month:'long', year:'numeric' }) : '' %></span>
    <% if (avviso.autore_nome) { %><span class="text-muted" style="font-size:.85rem">Â· <%= avviso.autore_nome %></span><% } %>
  </div>

  <div style="line-height:1.7;font-size:1.05rem;white-space:pre-wrap;word-break:break-word">
    <%= avviso.contenuto %>
  </div>

  <div style="margin-top:1.5rem;padding-top:1rem;border-top:1px solid var(--border)">
    <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/avvisi" class="btn btn-sm">
      <svg class="icon icon--sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" /></svg>
      Torna agli avvisi
    </a>
  </div>
</div>
