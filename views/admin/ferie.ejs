<% var bp = typeof basePath !== 'undefined' ? basePath : ''; %>
<h1 class="page-title">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
  Richieste Ferie
  <span style="font-size:.9rem;font-weight:400;color:var(--muted);margin-left:.5rem">(<%= typeof pagination !== 'undefined' ? pagination.total : ferie.length %>)</span>
</h1>

<% if (typeof filtri !== 'undefined' && (typeof usersList !== 'undefined' && usersList.length)) { %>
<div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden;margin-bottom:1rem">
  <form method="get" action="<%= bp %>/admin/ferie" class="rsp-flex-form" style="display:flex;gap:.75rem;align-items:flex-end;flex-wrap:wrap;padding:1rem 1.25rem">
    <div style="min-width:130px">
      <label style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Stato</label>
      <select name="stato" style="width:100%">
        <option value="">Tutte</option>
        <option value="pending"<%= filtri.stato === 'pending' ? ' selected' : '' %>>In attesa</option>
        <option value="approved"<%= filtri.stato === 'approved' ? ' selected' : '' %>>Approvate</option>
        <option value="rejected"<%= filtri.stato === 'rejected' ? ' selected' : '' %>>Rifiutate</option>
      </select>
    </div>
    <div style="min-width:150px">
      <label style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Dipendente</label>
      <select name="user_id" style="width:100%">
        <option value="">Tutti</option>
        <% (usersList || []).forEach(function(u) { %>
        <option value="<%= u.id %>"<%= filtri.user_id == u.id ? ' selected' : '' %>><%= u.username %></option>
        <% }); %>
      </select>
    </div>
    <input type="hidden" name="page" value="1">
    <button type="submit" class="btn btn-sm">Filtra</button>
    <% if (filtri.stato || filtri.user_id) { %>
    <a href="<%= bp %>/admin/ferie" class="btn btn-sm btn--secondary">Reset</a>
    <% } %>
  </form>
</div>
<% } %>

<div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden;margin-bottom:1.5rem">
  <% if (ferie.length === 0) { %>
    <div style="padding:3rem;text-align:center">
      <svg style="width:48px;height:48px;color:var(--muted);opacity:.4;margin-bottom:.75rem" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
      <p style="margin:0;color:var(--muted);font-size:.95rem">Nessuna richiesta.</p>
    </div>
  <% } else { %>
    <div>
      <% ferie.forEach(function(f) { %>
      <div data-id="<%= f.id %>" class="rsp-list-row" style="display:flex;align-items:center;gap:1rem;padding:.85rem 1.25rem;border-bottom:1px solid var(--border,#f3f4f6)">
        <div style="width:38px;height:38px;border-radius:50%;background:var(--primary,#1a56db);color:#fff;display:flex;align-items:center;justify-content:center;font-weight:700;font-size:.85rem;flex-shrink:0"><%= f.full_name ? f.full_name.charAt(0).toUpperCase() : f.username.charAt(0).toUpperCase() %></div>
        <div style="flex:1;min-width:0">
          <div style="display:flex;align-items:center;gap:.5rem;flex-wrap:wrap">
            <span style="font-weight:600;font-size:.9rem"><%= f.full_name || f.username %></span>
            <span style="font-size:.8rem;color:var(--muted)">@<%= f.username %></span>
          </div>
          <div style="display:flex;align-items:center;gap:.5rem;margin-top:.2rem;font-size:.85rem;color:var(--muted)">
            <span style="font-weight:500;color:var(--text)"><%= f.data_inizio %></span>
            <span>→</span>
            <span style="font-weight:500;color:var(--text)"><%= f.data_fine %></span>
            <span>·</span>
            <span><%= f.giorni_totali %> gg</span>
            <span>·</span>
            <span style="text-transform:capitalize"><%= f.tipo %></span>
            <% if (f.tipo === 'malattia' && f.codice_protocollo) { %>
            <span>·</span>
            <span style="display:inline-flex;align-items:center;gap:3px;background:var(--danger,#dc2626);color:#fff;font-size:.7rem;font-weight:700;padding:.2rem .55rem;border-radius:5px;letter-spacing:.02em" title="Codice protocollo medico">
              <svg style="width:11px;height:11px;flex-shrink:0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" /></svg>
              <%= f.codice_protocollo %>
            </span>
            <% } %>
          </div>
        </div>
        <span class="badge <%= f.stato %>" style="font-size:.7rem;flex-shrink:0"><%= f.stato === 'pending' ? 'In attesa' : f.stato === 'approved' ? 'Approvato' : 'Rifiutato' %></span>
        <div class="admin-ferie-actions" style="display:flex;gap:.35rem;flex-shrink:0">
          <% if (f.stato === 'pending') { %>
            <button type="button" class="approve-btn" data-id="<%= f.id %>" title="Approva" style="width:30px;height:30px;border-radius:50%;border:1px solid var(--border,#ddd);background:var(--card-bg,#fff);cursor:pointer;display:flex;align-items:center;justify-content:center;color:var(--success,#22c55e);transition:all .15s">
              <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
            </button>
            <button type="button" class="reject-btn" data-id="<%= f.id %>" title="Rifiuta" style="width:30px;height:30px;border-radius:50%;border:1px solid var(--border,#ddd);background:var(--card-bg,#fff);cursor:pointer;display:flex;align-items:center;justify-content:center;color:var(--danger,#ef4444);transition:all .15s">
              <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
            </button>
          <% } %>
          <button type="button" class="admin-ferie-edit-btn" data-id="<%= f.id %>" data-inizio="<%= f.data_inizio %>" data-fine="<%= f.data_fine %>" data-tipo="<%= f.tipo %>" data-note="<%= f.note || '' %>" title="Modifica" style="width:30px;height:30px;border-radius:50%;border:1px solid var(--border,#ddd);background:var(--card-bg,#fff);cursor:pointer;display:flex;align-items:center;justify-content:center;color:var(--primary,#1a56db);transition:all .15s">
            <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125" /></svg>
          </button>
          <button type="button" class="admin-ferie-delete-btn" data-id="<%= f.id %>" title="Cancella" style="width:30px;height:30px;border-radius:50%;border:1px solid var(--border,#ddd);background:var(--card-bg,#fff);cursor:pointer;display:flex;align-items:center;justify-content:center;color:var(--danger,#ef4444);transition:all .15s">
            <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" /></svg>
          </button>
        </div>
      </div>
      <% }); %>
    </div>

    <% if (typeof pagination !== 'undefined' && pagination.totalPages > 1) { %>
    <div style="display:flex;justify-content:space-between;align-items:center;padding:.75rem 1.25rem;border-top:1px solid var(--border,#e5e7eb);background:var(--bg-subtle,#f9fafb)">
      <span style="font-size:.85rem;color:var(--muted)">Pagina <%= pagination.page %> di <%= pagination.totalPages %></span>
      <div style="display:flex;gap:.5rem">
        <% if (pagination.page > 1) { %><a href="?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %>&stato=<%= (typeof filtri !== 'undefined' && filtri.stato) || '' %>&user_id=<%= (typeof filtri !== 'undefined' && filtri.user_id) || '' %>" class="btn btn-sm">Precedente</a><% } %>
        <% if (pagination.page < pagination.totalPages) { %><a href="?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %>&stato=<%= (typeof filtri !== 'undefined' && filtri.stato) || '' %>&user_id=<%= (typeof filtri !== 'undefined' && filtri.user_id) || '' %>" class="btn btn-sm">Successivo</a><% } %>
      </div>
    </div>
    <% } %>
  <% } %>
</div>

<div class="admin-ferie-calendar" style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden">
  <div style="padding:1rem 1.25rem;border-bottom:1px solid var(--border,#e5e7eb);display:flex;align-items:center;gap:.5rem;font-weight:600">
    <svg style="width:18px;height:18px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
    Calendario ferie
  </div>
  <div style="padding:1rem 1.25rem">
    <p class="calendar-hint" style="margin:0 0 1rem;font-size:.85rem;color:var(--muted)">Clicca su un giorno per vedere le richieste (approvate e in attesa) e modificarle o cancellarle.</p>
    <div class="calendar-nav">
      <button type="button" class="btn btn-sm calendar-prev" aria-label="Mese precedente"><span class="calendar-nav__arrow">‹</span><span class="calendar-nav__label">Prec</span></button>
      <h3 class="calendar-title" id="adminCalendarMonthTitle">—</h3>
      <button type="button" class="btn btn-sm calendar-next" aria-label="Mese successivo"><span class="calendar-nav__label">Succ</span><span class="calendar-nav__arrow">›</span></button>
    </div>
    <div class="calendar-wrap">
      <div class="calendar-weekdays"><span>Lun</span><span>Mar</span><span>Mer</span><span>Gio</span><span>Ven</span><span>Sab</span><span>Dom</span></div>
      <div class="calendar-grid" id="adminCalendarGrid"></div>
    </div>
  </div>
</div>

<style>
.approve-btn:hover { background:var(--success,#22c55e) !important; color:#fff !important; border-color:var(--success,#22c55e) !important }
.reject-btn:hover, .admin-ferie-delete-btn:hover { background:var(--danger,#ef4444) !important; color:#fff !important; border-color:var(--danger,#ef4444) !important }
.admin-ferie-edit-btn:hover { background:var(--primary,#1a56db) !important; color:#fff !important; border-color:var(--primary,#1a56db) !important }
</style>

<!-- Modale dettaglio giorno: elenco richieste con Modifica / Cancella -->
<div id="adminFerieOverlay" class="modal-overlay admin-ferie-modal" aria-hidden="true" hidden>
  <div class="modal admin-ferie-modal__box" role="dialog" aria-modal="true">
    <h3 class="modal__title" id="adminFerieDayTitle">Ferie</h3>
    <div class="admin-ferie-day-list" id="adminFerieDayList"></div>
    <div class="modal__actions">
      <button type="button" class="btn btn--secondary" id="adminFerieDayClose">Chiudi</button>
    </div>
  </div>
</div>

<!-- Modale modifica richiesta -->
<div id="adminFerieEditOverlay" class="modal-overlay admin-ferie-modal" aria-hidden="true" hidden>
  <div class="modal admin-ferie-modal__box admin-ferie-modal__box--form" role="dialog" aria-modal="true">
    <h3 class="modal__title">Modifica richiesta</h3>
    <form id="adminFerieEditForm" class="admin-ferie-edit-form">
      <input type="hidden" id="adminFerieEditId" name="id">
      <label>Data inizio <input type="date" id="adminFerieEditInizio" name="data_inizio" required></label>
      <label>Data fine <input type="date" id="adminFerieEditFine" name="data_fine" required></label>
      <label>Tipo <select id="adminFerieEditTipo" name="tipo"><option value="ferie">Ferie</option><option value="permesso">Permesso</option><option value="malattia">Malattia</option></select></label>
      <div id="adminEditProtocolloRow" style="display:none">
        <label>Codice protocollo medico <span style="color:var(--danger,#dc2626);font-weight:600">*</span> <input type="text" id="adminFerieEditProtocollo" name="codice_protocollo" placeholder="Codice rilasciato dal medico di base" maxlength="100"></label>
      </div>
      <label>Note <textarea id="adminFerieEditNote" name="note" rows="2" placeholder="Opzionale"></textarea></label>
      <div class="modal__actions">
        <button type="button" class="btn btn--secondary" id="adminFerieEditCancel">Annulla</button>
        <button type="submit" class="btn">Salva</button>
      </div>
    </form>
  </div>
</div>

<script>
  var csrf = '<%= csrfToken %>';
  var base = window.APP_BASE || '';

  document.querySelectorAll('.approve-btn').forEach(function(b) {
    b.onclick = async function() {
      var id = this.dataset.id;
      this.disabled = true;
      try {
        var r = await fetch(base + '/admin/ferie/' + id + '/approve', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ _csrf: csrf }) });
        var j = await r.json();
        window.showToast(j.message || j.error, j.success ? 'ok' : 'error');
        if (j.success) location.reload();
      } catch (x) { window.showToast('Errore di connessione', 'error'); }
      this.disabled = false;
    };
  });
  document.querySelectorAll('.reject-btn').forEach(function(b) {
    b.onclick = function() {
      window.showModal({ title: 'Rifiuta richiesta', text: 'Rifiutare questa richiesta di ferie?', onConfirm: async function() {
        var id = b.dataset.id;
        b.disabled = true;
        try {
          var r = await fetch(base + '/admin/ferie/' + id + '/reject', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ _csrf: csrf }) });
          var j = await r.json();
          window.showToast(j.message || j.error, j.success ? 'ok' : 'error');
          if (j.success) location.reload();
        } catch (x) { window.showToast('Errore di connessione', 'error'); }
        b.disabled = false;
      }});
    };
  });

  function openEditModal(entry) {
    var id = entry.id || entry.getAttribute('data-id');
    var inizio = entry.data_inizio || entry.getAttribute('data-inizio');
    var fine = entry.data_fine || entry.getAttribute('data-fine');
    var tipo = entry.tipo || entry.getAttribute('data-tipo') || 'ferie';
    var note = (entry.note != null ? entry.note : entry.getAttribute('data-note')) || '';
    var protocollo = (entry.codice_protocollo != null ? entry.codice_protocollo : entry.getAttribute('data-protocollo')) || '';
    document.getElementById('adminFerieEditId').value = id;
    document.getElementById('adminFerieEditInizio').value = inizio;
    document.getElementById('adminFerieEditFine').value = fine;
    document.getElementById('adminFerieEditTipo').value = tipo;
    document.getElementById('adminFerieEditNote').value = note;
    document.getElementById('adminFerieEditProtocollo').value = protocollo;
    var protoRow = document.getElementById('adminEditProtocolloRow');
    if (tipo === 'malattia') { protoRow.style.display = ''; } else { protoRow.style.display = 'none'; }
    document.getElementById('adminFerieEditOverlay').removeAttribute('hidden');
    document.getElementById('adminFerieEditOverlay').setAttribute('aria-hidden', 'false');
  }
  // Mostra/nascondi protocollo nel modale modifica admin
  var adminEditTipo = document.getElementById('adminFerieEditTipo');
  if (adminEditTipo) {
    adminEditTipo.addEventListener('change', function() {
      var row = document.getElementById('adminEditProtocolloRow');
      var inp = document.getElementById('adminFerieEditProtocollo');
      if (this.value === 'malattia') { row.style.display = ''; inp.required = true; }
      else { row.style.display = 'none'; inp.required = false; inp.value = ''; }
    });
  }
  function closeEditModal() {
    document.getElementById('adminFerieEditOverlay').setAttribute('hidden', '');
    document.getElementById('adminFerieEditOverlay').setAttribute('aria-hidden', 'true');
  }
  function doDelete(id, onDone) {
    window.showModal({
      title: 'Cancella richiesta',
      text: 'Eliminare definitivamente questa richiesta di ferie?',
      onConfirm: async function() {
        try {
          var r = await fetch(base + '/admin/ferie/' + id, { method: 'DELETE', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ _csrf: csrf }) });
          var j = await r.json();
          window.showToast(j.message || j.error, j.success ? 'ok' : 'error');
          if (j.success && onDone) onDone();
        } catch (x) { window.showToast('Errore di connessione', 'error'); }
      }
    });
  }

  document.querySelectorAll('.admin-ferie-edit-btn').forEach(function(btn) {
    btn.onclick = function() {
      document.getElementById('adminFerieOverlay').setAttribute('hidden', '');
      openEditModal({ id: this.dataset.id, data_inizio: this.dataset.inizio, data_fine: this.dataset.fine, tipo: this.dataset.tipo, note: this.dataset.note || '' });
    };
  });
  document.querySelectorAll('.admin-ferie-delete-btn').forEach(function(btn) {
    btn.onclick = function() { doDelete(this.dataset.id, function() { location.reload(); }); };
  });

  document.getElementById('adminFerieEditCancel').onclick = closeEditModal;
  document.getElementById('adminFerieEditForm').onsubmit = async function(e) {
    e.preventDefault();
    var id = document.getElementById('adminFerieEditId').value;
    var payload = { _csrf: csrf, data_inizio: document.getElementById('adminFerieEditInizio').value, data_fine: document.getElementById('adminFerieEditFine').value, tipo: document.getElementById('adminFerieEditTipo').value, note: document.getElementById('adminFerieEditNote').value, codice_protocollo: document.getElementById('adminFerieEditProtocollo').value };
    try {
      var r = await fetch(base + '/admin/ferie/' + id, { method: 'PUT', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload) });
      var j = await r.json();
      window.showToast(j.message || j.error, j.success ? 'ok' : 'error');
      if (j.success) { closeEditModal(); location.reload(); }
    } catch (x) { window.showToast('Errore di connessione', 'error'); }
  };

  document.getElementById('adminFerieDayClose').onclick = function() {
    document.getElementById('adminFerieOverlay').setAttribute('hidden', '');
    document.getElementById('adminFerieOverlay').setAttribute('aria-hidden', 'true');
  };
  document.getElementById('adminFerieOverlay').onclick = function(e) {
    if (e.target === this) { this.setAttribute('hidden', ''); this.setAttribute('aria-hidden', 'true'); }
  };
  document.getElementById('adminFerieEditOverlay').onclick = function(e) {
    if (e.target === this) closeEditModal();
  };

  (function() {
    var monthNames = ['Gennaio','Febbraio','Marzo','Aprile','Maggio','Giugno','Luglio','Agosto','Settembre','Ottobre','Novembre','Dicembre'];
    var year = new Date().getFullYear(), month = new Date().getMonth() + 1;
    var gridEl = document.getElementById('adminCalendarGrid');
    var titleEl = document.getElementById('adminCalendarMonthTitle');
    var byDate = {};
    var dayModal = document.getElementById('adminFerieOverlay');
    var dayTitle = document.getElementById('adminFerieDayTitle');
    var dayList = document.getElementById('adminFerieDayList');

    function firstDayOffset(y, m) { return ((new Date(y, m - 1, 1).getDay() + 6) % 7); }
    function daysInMonth(y, m) { return new Date(y, m, 0).getDate(); }

    function render() {
      titleEl.textContent = monthNames[month - 1] + ' ' + year;
      var offset = firstDayOffset(year, month);
      var days = daysInMonth(year, month);
      var html = '';
      for (var i = 0; i < offset; i++) html += '<span class="calendar-day calendar-day--empty"></span>';
      for (var d = 1; d <= days; d++) {
        var key = year + '-' + String(month).padStart(2,'0') + '-' + String(d).padStart(2,'0');
        var entries = byDate[key] || [];
        var hasFerie = entries.length > 0;
        var label = hasFerie ? entries.length + ' richieste' : '';
        var dot = hasFerie ? '<span class="calendar-day__dot" aria-hidden="true"></span>' : '';
        html += '<button type="button" class="calendar-day' + (hasFerie ? ' calendar-day--has' : '') + '" data-date="' + key + '" title="' + (hasFerie ? 'Clicca: ' + entries.length + ' richieste' : 'Clicca') + '"><span class="calendar-day__num">' + d + '</span>' + dot + (label ? '<span class="calendar-day__label">' + label + '</span>' : '') + '</button>';
      }
      gridEl.innerHTML = html;
      gridEl.querySelectorAll('.calendar-day:not(.calendar-day--empty)').forEach(function(btn) {
        btn.addEventListener('click', function() {
          var date = this.dataset.date;
          if (!date) return;
          var parts = date.split('-');
          var entries = byDate[date] || [];
          dayTitle.textContent = 'Ferie il ' + parts[2] + '/' + parts[1] + '/' + parts[0];
          dayList.innerHTML = '';
          if (entries.length === 0) {
            dayList.innerHTML = '<p class="empty">Nessuna richiesta in questo giorno.</p>';
          } else {
            var seen = {};
            entries.forEach(function(entry) {
              if (seen[entry.id]) return;
              seen[entry.id] = true;
              var statoLabel = entry.stato === 'pending' ? 'In attesa' : entry.stato === 'approved' ? 'Approvato' : 'Rifiutato';
              var div = document.createElement('div');
              div.className = 'admin-ferie-day-entry';
              div.innerHTML = '<div class="admin-ferie-day-entry__info"><strong>' + (entry.full_name || entry.username) + '</strong> ' + entry.data_inizio + ' → ' + entry.data_fine + ' · ' + entry.tipo + ' · <span class="badge ' + entry.stato + '">' + statoLabel + '</span></div><div class="admin-ferie-day-entry__actions"><button type="button" class="btn-sm admin-ferie-edit-btn" data-id="' + entry.id + '" data-inizio="' + entry.data_inizio + '" data-fine="' + entry.data_fine + '" data-tipo="' + entry.tipo + '" data-note="' + (entry.note || '') + '">Modifica</button><button type="button" class="btn-sm admin-ferie-delete-btn" data-id="' + entry.id + '">Cancella</button></div>';
              dayList.appendChild(div);
              div.querySelector('.admin-ferie-edit-btn').onclick = function() {
                dayModal.setAttribute('hidden', '');
                openEditModal({ id: entry.id, data_inizio: entry.data_inizio, data_fine: entry.data_fine, tipo: entry.tipo, note: entry.note || '' });
              };
              div.querySelector('.admin-ferie-delete-btn').onclick = function() {
                dayModal.setAttribute('hidden', '');
                doDelete(entry.id, function() { location.reload(); });
              };
            });
          }
          dayModal.removeAttribute('hidden');
          dayModal.setAttribute('aria-hidden', 'false');
        });
      });
    }

    function load() {
      fetch(base + '/admin/ferie/calendar?year=' + year + '&month=' + month).then(function(r) { return r.json(); }).then(function(j) {
        byDate = (j && typeof j.byDate === 'object' && j.byDate !== null) ? j.byDate : {};
        render();
      }).catch(function() { byDate = {}; render(); });
    }

    document.querySelector('.admin-ferie-calendar .calendar-prev').addEventListener('click', function() {
      month--; if (month < 1) { month = 12; year--; }
      load();
    });
    document.querySelector('.admin-ferie-calendar .calendar-next').addEventListener('click', function() {
      month++; if (month > 12) { month = 1; year++; }
      load();
    });
    load();
  })();
</script>
