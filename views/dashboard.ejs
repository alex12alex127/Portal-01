<div id="widgetSettings" class="p-widget-panel" style="display:none">
  <p class="p-widget-panel__title">Mostra/nascondi sezioni</p>
  <div class="p-widget-options">
    <label class="p-widget-option"><input type="checkbox" data-widget="stats" checked> Ferie / Statistiche</label>
    <label class="p-widget-option"><input type="checkbox" data-widget="approvazioni" checked> Approvazioni</label>
    <label class="p-widget-option"><input type="checkbox" data-widget="avvisi" checked> Avvisi staff</label>
    <label class="p-widget-option"><input type="checkbox" data-widget="sicurezza" checked> Scadenze sicurezza</label>

    <label class="p-widget-option"><input type="checkbox" data-widget="calendario" checked> Calendario ferie</label>
    <label class="p-widget-option"><input type="checkbox" data-widget="richieste" checked> Le mie richieste</label>
    <label class="p-widget-option"><input type="checkbox" data-widget="meteo" checked> Meteo</label>
    <label class="p-widget-option"><input type="checkbox" data-widget="azioni" checked> Azioni rapide</label>
  </div>
</div>

<script>
(function(){
  // Widget visibility
  var btn = document.getElementById('toggleWidgets');
  var panel = document.getElementById('widgetSettings');
  if (!btn || !panel) return;
  var map = {
    stats: '.dashboard-stats', approvazioni: '.dashboard-approvazioni',
    avvisi: '.dashboard-avvisi', sicurezza: '.dashboard-sicurezza',
    calendario: '.dashboard-calendario',
    richieste: '.dashboard-ultime', meteo: '.dashboard-meteo',
    azioni: '.dashboard-actions', approvare: '.dashboard-approvare'
  };
  var saved = {};
  try { saved = JSON.parse(localStorage.getItem('portal-widgets') || '{}'); } catch(e){}
  Object.keys(map).forEach(function(k) {
    var el = document.querySelector(map[k]);
    var cb = panel.querySelector('[data-widget="' + k + '"]');
    if (saved[k] === false) { if (el) el.style.display = 'none'; if (cb) cb.checked = false; }
  });
  btn.addEventListener('click', function() { panel.style.display = panel.style.display === 'none' ? 'block' : 'none'; });
  panel.addEventListener('change', function(e) {
    var cb = e.target; if (!cb.dataset.widget) return;
    var el = document.querySelector(map[cb.dataset.widget]);
    if (el) el.style.display = cb.checked ? '' : 'none';
    var prefs = {};
    panel.querySelectorAll('[data-widget]').forEach(function(c) { prefs[c.dataset.widget] = c.checked; });
    localStorage.setItem('portal-widgets', JSON.stringify(prefs));
  });

  // Meteo widget (Open-Meteo API - gratuita, no API key)
  var meteoContent = document.getElementById('meteoContent');
  var meteoSettingsBtn = document.getElementById('meteoSettingsBtn');
  var meteoSettingsDiv = document.getElementById('meteoSettings');
  var meteoCittaInput = document.getElementById('meteoCitta');
  var meteoSaveBtn = document.getElementById('meteoSaveBtn');

  var defaultCity = 'Roma';
  var savedCity = localStorage.getItem('portal-meteo-city') || defaultCity;

  var weatherCodes = {
    0: { icon: '\u2600\uFE0F', desc: 'Sereno' },
    1: { icon: '\uD83C\uDF24\uFE0F', desc: 'Prevalentemente sereno' },
    2: { icon: '\u26C5', desc: 'Parzialmente nuvoloso' },
    3: { icon: '\u2601\uFE0F', desc: 'Coperto' },
    45: { icon: '\uD83C\uDF2B\uFE0F', desc: 'Nebbia' },
    48: { icon: '\uD83C\uDF2B\uFE0F', desc: 'Nebbia gelata' },
    51: { icon: '\uD83C\uDF26\uFE0F', desc: 'Pioggerella leggera' },
    53: { icon: '\uD83C\uDF26\uFE0F', desc: 'Pioggerella' },
    55: { icon: '\uD83C\uDF27\uFE0F', desc: 'Pioggerella intensa' },
    61: { icon: '\uD83C\uDF27\uFE0F', desc: 'Pioggia leggera' },
    63: { icon: '\uD83C\uDF27\uFE0F', desc: 'Pioggia' },
    65: { icon: '\uD83C\uDF27\uFE0F', desc: 'Pioggia intensa' },
    71: { icon: '\u2744\uFE0F', desc: 'Neve leggera' },
    73: { icon: '\u2744\uFE0F', desc: 'Neve' },
    75: { icon: '\u2744\uFE0F', desc: 'Neve intensa' },
    80: { icon: '\uD83C\uDF26\uFE0F', desc: 'Rovesci leggeri' },
    81: { icon: '\uD83C\uDF27\uFE0F', desc: 'Rovesci' },
    82: { icon: '\u26C8\uFE0F', desc: 'Rovesci violenti' },
    95: { icon: '\u26C8\uFE0F', desc: 'Temporale' },
    96: { icon: '\u26C8\uFE0F', desc: 'Temporale con grandine' },
    99: { icon: '\u26C8\uFE0F', desc: 'Temporale con grandine forte' }
  };

  function loadMeteo(city) {
    meteoContent.innerHTML = '<div style="color:var(--muted);font-size:.85rem">Caricamento meteo per ' + city + '...</div>';
    // Step 1: geocode
    fetch('https://geocoding-api.open-meteo.com/v1/search?name=' + encodeURIComponent(city) + '&count=1&language=it')
      .then(function(r) { return r.json(); })
      .then(function(geo) {
        if (!geo.results || !geo.results.length) {
          meteoContent.innerHTML = '<div style="color:var(--danger);font-size:.85rem">Citta non trovata: ' + city + '</div>';
          return;
        }
        var loc = geo.results[0];
        // Step 2: weather
        return fetch('https://api.open-meteo.com/v1/forecast?latitude=' + loc.latitude + '&longitude=' + loc.longitude + '&current=temperature_2m,weather_code,wind_speed_10m,relative_humidity_2m&daily=temperature_2m_max,temperature_2m_min,weather_code&timezone=auto&forecast_days=3')
          .then(function(r) { return r.json(); })
          .then(function(w) {
            var cur = w.current;
            var wc = weatherCodes[cur.weather_code] || { icon: '\u2601\uFE0F', desc: 'N/D' };
            var html = '<div style="display:flex;align-items:center;justify-content:center;gap:1rem;flex-wrap:wrap">';
            html += '<div style="font-size:2.5rem;line-height:1">' + wc.icon + '</div>';
            html += '<div style="text-align:left">';
            html += '<div style="font-size:1.5rem;font-weight:700;line-height:1.1">' + Math.round(cur.temperature_2m) + '\u00B0C</div>';
            html += '<div style="font-size:.82rem;color:var(--muted)">' + wc.desc + '</div>';
            html += '<div style="font-size:.75rem;color:var(--muted)">' + loc.name + ' \u00B7 Vento ' + Math.round(cur.wind_speed_10m) + ' km/h \u00B7 Umidita ' + cur.relative_humidity_2m + '%</div>';
            html += '</div></div>';
            // Previsioni 3 giorni
            if (w.daily) {
              html += '<div style="display:flex;justify-content:center;gap:1.5rem;margin-top:.75rem;font-size:.78rem">';
              var giorni = ['Dom','Lun','Mar','Mer','Gio','Ven','Sab'];
              for (var i = 0; i < Math.min(3, w.daily.time.length); i++) {
                var dd = new Date(w.daily.time[i]);
                var dwc = weatherCodes[w.daily.weather_code[i]] || { icon: '\u2601\uFE0F', desc: '' };
                html += '<div style="text-align:center">';
                html += '<div style="font-weight:600">' + giorni[dd.getDay()] + ' ' + dd.getDate() + '</div>';
                html += '<div style="font-size:1.2rem">' + dwc.icon + '</div>';
                html += '<div><strong>' + Math.round(w.daily.temperature_2m_max[i]) + '\u00B0</strong> / ' + Math.round(w.daily.temperature_2m_min[i]) + '\u00B0</div>';
                html += '</div>';
              }
              html += '</div>';
            }
            meteoContent.innerHTML = html;
          });
      })
      .catch(function() {
        meteoContent.innerHTML = '<div style="color:var(--muted);font-size:.85rem">Meteo non disponibile</div>';
      });
  }

  if (meteoSettingsBtn) meteoSettingsBtn.onclick = function() {
    meteoSettingsDiv.style.display = meteoSettingsDiv.style.display === 'none' ? 'block' : 'none';
    meteoCittaInput.value = savedCity;
    meteoCittaInput.focus();
  };
  if (meteoSaveBtn) meteoSaveBtn.onclick = function() {
    var city = meteoCittaInput.value.trim();
    if (city) {
      savedCity = city;
      localStorage.setItem('portal-meteo-city', city);
      meteoSettingsDiv.style.display = 'none';
      loadMeteo(city);
    }
  };
  if (meteoCittaInput) meteoCittaInput.onkeydown = function(e) { if (e.key === 'Enter') { e.preventDefault(); meteoSaveBtn.click(); } };

  loadMeteo(savedCity);
})();
</script>
