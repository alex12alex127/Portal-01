<h1 class="page-title">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>
  Dashboard
</h1>

<% if (typeof summary !== 'undefined' && summary) { %>
<div class="dashboard-stats">
  <div class="dashboard-stats__item">
    <span class="dashboard-stats__value"><%= summary.pending || 0 %></span>
    <span class="dashboard-stats__label">In attesa</span>
  </div>
  <div class="dashboard-stats__item">
    <span class="dashboard-stats__value"><%= summary.approved || 0 %></span>
    <span class="dashboard-stats__label">Approvate</span>
  </div>
  <div class="dashboard-stats__item">
    <span class="dashboard-stats__value"><%= summary.giorniApproved || 0 %></span>
    <span class="dashboard-stats__label">Giorni approvati <%= summary.year %></span>
  </div>
</div>
<% } %>

<% if (typeof notifiche !== 'undefined' && notifiche.length > 0) { %>
<div class="card dashboard-notifiche">
  <h2><svg class="icon icon--sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" /></svg> Notifiche</h2>
  <ul class="dashboard-notifiche__list">
    <% notifiche.forEach(function(n) { %>
    <li class="dashboard-notifiche__item <%= n.letta ? 'letta' : '' %>">
      <strong><%= n.titolo || 'Notifica' %></strong>
      <% if (n.messaggio) { %><p><%= n.messaggio %></p><% } %>
      <span class="dashboard-notifiche__date"><%= n.created_at %></span>
    </li>
    <% }); %>
  </ul>
  <form method="post" action="<%= typeof basePath !== 'undefined' ? basePath : '' %>/profile/notifiche-read" style="margin-top:0.5rem">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit" class="btn btn-sm btn--secondary">Segna tutte come lette</button>
  </form>
</div>
<% } %>

<% if (typeof ultimeRichieste !== 'undefined' && ultimeRichieste.length > 0) { %>
<div class="card dashboard-ultime">
  <h2><svg class="icon icon--sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg> Ultime richieste ferie</h2>
  <ul class="dashboard-ultime__list">
    <% ultimeRichieste.forEach(function(r) { %>
    <li><%= r.data_inizio %> → <%= r.data_fine %> · <%= r.tipo %> · <span class="badge badge--ferie <%= r.stato %>"><%= r.stato === 'pending' ? 'In attesa' : r.stato === 'approved' ? 'Approvato' : 'Rifiutato' %></span></li>
    <% }); %>
  </ul>
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/ferie" class="btn btn-sm">Vai a Gestione Ferie</a>
</div>
<% } %>

<div class="modules">
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/ferie" class="module-card">
    <div class="card-icon">
      <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
    </div>
    <h2>Gestione Ferie</h2>
    <p>Richiedi e gestisci le tue ferie.</p>
    <span class="btn">Vai a Ferie</span>
  </a>
  <div class="module-card disabled">
    <div class="card-icon">
      <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" /></svg>
    </div>
    <h2>Magazzino</h2>
    <p>Modulo in arrivo.</p>
  </div>
</div>
