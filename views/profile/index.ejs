<% var bp = typeof basePath !== 'undefined' ? basePath : ''; %>
<h1 class="page-title">
  <svg class="icon icon--lg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /></svg>
  Il mio profilo
</h1>

<div style="display:grid;grid-template-columns:280px 1fr;gap:1.5rem;align-items:start">

  <div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden;text-align:center;padding:2rem 1.5rem">
    <div style="width:72px;height:72px;border-radius:50%;background:var(--primary,#4f46e5);color:#fff;display:flex;align-items:center;justify-content:center;font-size:2rem;font-weight:700;margin:0 auto .75rem"><%= profile.full_name ? profile.full_name.charAt(0).toUpperCase() : profile.username.charAt(0).toUpperCase() %></div>
    <div style="font-size:1.15rem;font-weight:700"><%= profile.full_name %></div>
    <div style="font-size:.85rem;color:var(--muted)">@<%= profile.username %></div>
    <div style="font-size:.85rem;color:var(--muted);margin-top:.25rem"><%= profile.email %></div>
    <div style="margin-top:1rem;padding-top:1rem;border-top:1px solid var(--border,#e5e7eb)">
      <span class="badge approved" style="font-size:.75rem">Ruolo: <%= profile.role || 'user' %></span>
    </div>
    <div style="margin-top:1.25rem">
      <a href="<%= bp %>/profile/settings" style="display:inline-flex;align-items:center;gap:.4rem;font-size:.85rem;color:var(--primary);text-decoration:none">
        <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
        Impostazioni
      </a>
    </div>
  </div>

  <div style="display:flex;flex-direction:column;gap:1.25rem">

    <div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden">
      <div style="padding:1rem 1.25rem;border-bottom:1px solid var(--border,#e5e7eb);font-weight:600;display:flex;align-items:center;gap:.5rem">
        <svg style="width:18px;height:18px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /></svg>
        Dati account
      </div>
      <form id="pf" style="padding:1.25rem">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div style="display:grid;grid-template-columns:1fr 1fr;gap:1rem;margin-bottom:1rem">
          <div>
            <label for="pf-username" style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Username</label>
            <input id="pf-username" type="text" value="<%= profile.username %>" disabled style="width:100%;opacity:.6">
          </div>
          <div>
            <label for="pf-full_name" style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Nome completo</label>
            <input id="pf-full_name" type="text" name="full_name" value="<%= profile.full_name %>" required style="width:100%">
          </div>
        </div>
        <div style="margin-bottom:1rem">
          <label for="pf-email" style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Email</label>
          <input id="pf-email" type="email" name="email" value="<%= profile.email %>" required style="width:100%">
        </div>
        <div style="display:flex;align-items:center;gap:1rem">
          <button type="submit" class="btn"><span class="btn-text">Aggiorna profilo</span></button>
          <div id="pfMsg" role="status" aria-live="polite" style="font-size:.85rem"></div>
        </div>
      </form>
    </div>

    <div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden">
      <div style="padding:1rem 1.25rem;border-bottom:1px solid var(--border,#e5e7eb);font-weight:600;display:flex;align-items:center;gap:.5rem">
        <svg style="width:18px;height:18px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" /></svg>
        Cambia password
      </div>
      <form id="pw" style="padding:1.25rem">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div style="display:grid;grid-template-columns:1fr 1fr 1fr;gap:1rem;margin-bottom:1rem">
          <div>
            <label for="pw-current" style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Attuale</label>
            <input id="pw-current" type="password" name="current_password" required style="width:100%">
          </div>
          <div>
            <label for="pw-new" style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Nuova</label>
            <input id="pw-new" type="password" name="new_password" required style="width:100%">
          </div>
          <div>
            <label for="pw-confirm" style="display:block;font-size:.8rem;font-weight:600;color:var(--muted);margin-bottom:.25rem;text-transform:uppercase;letter-spacing:.03em">Conferma</label>
            <input id="pw-confirm" type="password" name="confirm_password" required style="width:100%">
          </div>
        </div>
        <div style="display:flex;align-items:center;gap:1rem">
          <button type="submit" class="btn"><span class="btn-text">Cambia password</span></button>
          <div id="pwMsg" role="status" aria-live="polite" style="font-size:.85rem"></div>
        </div>
      </form>
    </div>

    <div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden">
      <div style="padding:1rem 1.25rem;border-bottom:1px solid var(--border,#e5e7eb);font-weight:600;display:flex;align-items:center;gap:.5rem">
        <svg style="width:18px;height:18px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" /></svg>
        Dati e privacy
      </div>
      <div style="padding:1.25rem;display:flex;align-items:center;justify-content:space-between;gap:1rem">
        <p style="margin:0;font-size:.9rem;color:var(--muted)">Scarica una copia dei tuoi dati (profilo e richieste ferie) in formato JSON.</p>
        <a href="<%= bp %>/profile/export" class="btn btn--secondary btn-sm" download style="flex-shrink:0">Esporta dati</a>
      </div>
    </div>

  </div>
</div>

<style>
@media (max-width: 768px) {
  .profile-grid { grid-template-columns: 1fr !important; }
}
</style>
<script>
  document.getElementById('pf').onsubmit=async function(e){ e.preventDefault(); var m=document.getElementById('pfMsg'); m.textContent=''; m.className=''; var btn=this.querySelector('button'), txt=btn.querySelector('.btn-text'); btn.disabled=true; if(txt) txt.textContent='Salvataggio...'; try{ var r=await fetch((window.APP_BASE||'')+'/profile/update',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(Object.fromEntries(new FormData(this)))}); var j; try{j=await r.json();}catch(_){j={};} m.textContent=j.success?j.message:j.error; m.className=j.success?'message-ok':'message-error'; }catch(x){ m.textContent='Errore'; m.className='message-error'; } btn.disabled=false; if(txt) txt.textContent='Aggiorna profilo'; };
  document.getElementById('pw').onsubmit=async function(e){ e.preventDefault(); var m=document.getElementById('pwMsg'); m.textContent=''; m.className=''; var btn=this.querySelector('button'), txt=btn.querySelector('.btn-text'); btn.disabled=true; if(txt) txt.textContent='Salvataggio...'; try{ var r=await fetch((window.APP_BASE||'')+'/profile/change-password',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(Object.fromEntries(new FormData(this)))}); var j; try{j=await r.json();}catch(_){j={};} m.textContent=j.success?j.message:j.error; m.className=j.success?'message-ok':'message-error'; if(j.success) this.reset(); }catch(x){ m.textContent='Errore'; m.className='message-error'; } btn.disabled=false; if(txt) txt.textContent='Cambia password'; };
</script>
