<% var bp = typeof basePath !== 'undefined' ? basePath : ''; %>
<div style="margin-bottom:1rem">
  <a href="<%= bp %>/avvisi" style="display:inline-flex;align-items:center;gap:.3rem;font-size:.85rem;color:var(--primary,#1a56db);text-decoration:none">
    <svg style="width:14px;height:14px" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" /></svg>
    Torna agli avvisi
  </a>
</div>

<div style="background:var(--card-bg,#fff);border:1px solid var(--border,#e5e7eb);border-radius:12px;overflow:hidden">
  <div style="padding:1.5rem 1.5rem 0">
    <div style="display:flex;align-items:center;gap:.5rem;flex-wrap:wrap;margin-bottom:1rem">
      <span class="badge badge--avviso badge--<%= avviso.tipo %>" style="font-size:.7rem"><%= avviso.tipo === 'info' ? 'Info' : avviso.tipo === 'warning' ? 'Attenzione' : avviso.tipo === 'urgent' ? 'Urgente' : avviso.tipo === 'success' ? 'Successo' : avviso.tipo %></span>
      <% if (avviso.in_evidenza) { %><span style="background:var(--primary,#1a56db);color:#fff;padding:.1rem .5rem;border-radius:999px;font-size:.7rem;font-weight:600">In evidenza</span><% } %>
    </div>
    <h1 style="margin:0 0 .75rem;font-size:1.5rem;font-weight:700;line-height:1.3"><%= avviso.titolo %></h1>
    <div style="display:flex;align-items:center;gap:.75rem;margin-bottom:1.25rem">
      <% if (avviso.autore_nome) { %>
      <div style="display:flex;align-items:center;gap:.4rem">
        <div style="width:28px;height:28px;border-radius:50%;background:var(--primary,#1a56db);color:#fff;display:flex;align-items:center;justify-content:center;font-size:.7rem;font-weight:700"><%= avviso.autore_nome.charAt(0).toUpperCase() %></div>
        <span style="font-size:.85rem;font-weight:500"><%= avviso.autore_nome %></span>
      </div>
      <% } %>
      <span style="font-size:.8rem;color:var(--muted)"><%= avviso.created_at ? new Date(avviso.created_at).toLocaleDateString('it-IT', { day:'numeric', month:'long', year:'numeric' }) : '' %></span>
    </div>
  </div>
  <div style="padding:0 1.5rem 1.5rem;border-top:1px solid var(--border,#f3f4f6);padding-top:1.25rem">
    <div style="line-height:1.8;font-size:1rem;white-space:pre-wrap;word-break:break-word;color:var(--text)">
      <%= avviso.contenuto %>
    </div>
  </div>
</div>
